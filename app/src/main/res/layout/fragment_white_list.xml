<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/editAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/whitelistInfo"
        android:textColor="#000000"
        android:textSize="@dimen/text_mizerable_size"/>

    <EditText
        android:id="@+id/whitelistUrlEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editAlert"
        android:layout_margin="5dp"
        android:ems="10"
        android:hint="@string/example_com"
        android:inputType="textUri"/>
    <Button
        android:id="@+id/addWhitelistUrl"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/editAlert"
        android:layout_margin="5dp"
        android:text="@string/allow"/>

    <ListView
        android:id="@+id/urlList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/whitelistUrlEditText"
        android:layout_margin="5dp"
        android:scrollbars="vertical">

    </ListView>

</RelativeLayout>